#RewriteCond %{REQUEST_URI} !^/publicwhip/thepublicwhip\.gif 
#RewriteCond %{REQUEST_URI} !^/publicwhip/publicwhip\.css
#RewriteRule .*          /publicwhip/patents.php [R=302,L]
#RedirectMatch /[^p] http://www.publicwhip.org.uk/patents/patents.php

